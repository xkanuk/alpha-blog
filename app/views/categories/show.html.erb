<h1 class="text-center mt-4"><%= "Category: " + @category.name %></h1>

<div align="center">
  <% if logged_in? && current_user.admin? %>
    <%= link_to "Edit", edit_category_path(@category), class: "btn btn-outline-info" %>
    <%= link_to "Delete", category_path(@category), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to delete this category? Articles will no longer reference this category!" } %>   
  <% end %>
  <div class="flickr_pagination">
    <%= will_paginate @category_articles, :container => false %>
  </div>
</div>

<%= render 'category_articles'%>

<div class="flickr_pagination mb-4">
  <%= will_paginate @category_articles, :container => false %>
</div>
